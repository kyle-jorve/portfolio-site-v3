<div class="header__row">
    <a class="header__logo logo" href="/">
        <img class="logo__img" src="/dist/media/icons/logo-circle.svg" alt="Kyle Jorve logo">
    </a>
</div>

<div class="mobileNav{{#if (isPortfolioDetailPage)}} mobileNav--portfolioDetail{{/if}}">
    {{#unless (isPortfolioDetailPage)}}
        {{#each mobileNav}}
            <a
                class="mobileNav__item{{#if this.cssClass}} {{this.cssClass}}{{/if}}{{#if (currentPage this)}} mobileNav__item--current{{/if}}"
                href="{{this.url}}"
                {{#if this.target}}target="{{this.target}}"{{/if}}
                {{#if this.rel}}rel="{{this.rel}}"{{/if}}>

                <img class="mobileNav__icon" src="{{this.icon}}" alt="{{this.alt}}">
                <span class="mobileNav__label">{{this.pageName}}</span>
            </a>
        {{/each}}
    {{/unless}}

    <button class="nav__button{{#if (isPortfolioDetailPage)}} nav__button--close{{/if}}" id="navBtn">
        {{#unless (isPortfolioDetailPage)}}
            <div class="nav__buttonBlocks">
                <span class="nav__buttonBlock"></span>
                <span class="nav__buttonBlock nav__buttonBlock--disapparate"></span>
                <span class="nav__buttonBlock"></span>

                <span class="nav__buttonBlock nav__buttonBlock--disapparate"></span>
                <span class="nav__buttonBlock"></span>
                <span class="nav__buttonBlock nav__buttonBlock--disapparate"></span>

                <span class="nav__buttonBlock"></span>
                <span class="nav__buttonBlock nav__buttonBlock--disapparate"></span>
                <span class="nav__buttonBlock"></span>
            </div>
        {{/unless}}

        {{#if (isPortfolioDetailPage)}}
            <div class="nav__buttonLines">
                <span class="nav__buttonLine nav__buttonLine--1"></span>
                <span class="nav__buttonLine nav__buttonLine--2"></span>
            </div>
        {{/if}}
    </button>
</div>

{{#unless (isPortfolioDetailPage)}}
    <nav class="nav" id="mainNav">
        <div class="nav__wrp">
            <ul class="nav__ul">
                {{#each nav}}
                    <li class="nav__li{{#if (currentPage this)}} nav__li--current{{/if}}">
                        <a class="nav__a" href="{{this.url}}"{{#if this.target}} target="{{this.target}}"{{/if}}{{#if this.rel}} rel="{{this.rel}}"{{/if}}>
                            <span class="nav__text">{{this.pageName}}</span>
                        </a>
                    </li>
                {{/each}}
            </ul>

            <div class="social social--header">
                {{#each social}}
                    {{{printSocialIcon this}}}
                {{/each}}
            </div>

            <section class="nav__recentWork">
                <div class="wrapper wrapper--section">
                    <h2 class="nav__recentWorkTitle flexLine">Recent Work</h2>

                    <div class="portfolio__grid portfolio__grid--nav{{#if (isOdd recentWorkLimit)}} portfolio__grid--odd{{/if}}">
                        {{#each recentWork}}
                            {{{printPortfolioItem this false false}}}
                        {{/each}}
                    </div>
                </div>
            </section>
        </div>
    </nav>
{{/unless}}